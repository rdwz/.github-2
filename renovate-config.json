{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit10",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "dependencyDashboardApproval": true,
  "dependencyDashboardHeader": "[Z-Shell](https://www.zshell.dev) | Dependency Update Automation",
  "dependencyDashboardFooter": "[Z-Shell](https://www.zshell.dev) | [Renovate Preset](https://github.com/z-shell/.github/blob/main/renovate-config.json)",
  "assigneesFromCodeOwners": true,
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "groupName": "all dependencies",
  "separateMajorMinor": false,
  "groupSlug": "all",
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "pin": {
    "commitBody": "[skip CI]"
    "automerge": true
  },

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all dependencies",
      "groupSlug": "all"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    }
  ]
}
